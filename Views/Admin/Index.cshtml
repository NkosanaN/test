@model IEnumerable<MovieApiV.Model.Bookings>
@{
    ViewData["Title"] = "Car Inventory";
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
}

<h2>Admin Panel</h2>

@{
    ViewData["Title"] = "Car Inventory";
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
}
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Bookings</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">
            Finance
        </a>
    </li>
</ul>

<p></p>


<div class="tab-content" id="myTabContent">

    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <table class="table table-striped col-md-12" id="tbl">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().TestingCarName)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().CustName)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Revdate)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().hasCome)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>   @Html.DisplayFor(modelItem => item.TestingCarName)</td>
                        <td>   @Html.DisplayFor(modelItem => item.CustName)</td>
                        <td>   @Html.DisplayFor(modelItem => item.Revdate)</td>
                        <td>   @Html.DisplayFor(modelItem => item.hasCome)</td>


                        <td>
                            <div class="dropdown">
                                <button class="btn btn-secondary btn-sm  dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
                                    Action
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                    <a asp-action="Edit" asp-route-id="@item.CustomerId" class="dropdown-item">Edit</a>
                                    <a asp-action="Details" class="dropdown-item">Detail</a>
                                    <a asp-action="Delete" asp-route-id="@item.CustomerId" class="dropdown-item">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">...</div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
</div>




@section scripts
{
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tbl').DataTable({
                order:
                    [
                        ['1', 'desc']
                    ]
            });
        });
    </script>
}