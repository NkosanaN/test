@model IEnumerable<MovieApiV.Model.Part>
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<h2 class="p-2">Parts Available</h2>
<hr />

<table class="table table-striped" id="tbl">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PartCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PartCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>

                    <div class="dropdown">
                        <button class="btn btn-secondary btn-sm  dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                            <a asp-action="edit" asp-controller="parts" asp-route-id="@item.PartCode" class="dropdown-item">Edit</a>
                            <a asp-action="details" asp-controller="parts" asp-route-id="@item.PartCode" class="dropdown-item">Detail</a>
                            <a asp-action="delete" asp-controller="parts" asp-route-id="@item.PartCode" class="dropdown-item">Delete</a>
                        </div>
                    </div>

                    @*@Html.ActionLink("Edit", "Edit", "Parts", new { id = item.PartCode }) |
                    @Html.ActionLink("Details", "Details", "Parts", new { id = item.PartCode }) |
                    @Html.ActionLink("Delete", "Delete", "Parts", new { id = item.PartCode })*@
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" asp-controller="admin">Admin Panel</a>

@section scripts
{
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tbl').DataTable({
                order:
                    [
                        ['1', 'desc']
                    ]
            });
        });
    </script>
}
