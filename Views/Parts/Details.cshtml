    };

    function PartSearch() {

        var make = $('Make').val();
        var price = $('PriceRange').val();
        $.ajax({
            url: '/home/index',
            method: 'POST',
            data: { 'make': make, 'price': price },
            success: function (x) {
            }
        });
    };
</script>