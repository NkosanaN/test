@model (List<MovieApiV.Model.Bookings>, List<MovieApiV.Model.StockBal>)
@{
    ViewData["Title"] = "Car Inventory";
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
}

<h2 class="alert alert-primary text-center" role="alert">
    <i class="fas fa-user-circle"></i>Admin Panel
</h2>


<a asp-action="create" asp-controller="Parts" class="btn btn-dark">New Part </a>
<a asp-action="create" asp-controller="Cars" class="btn btn-dark">New Car </a>

<a asp-action="Parts" class="btn btn-dark">View Parts </a>
<a asp-action="Cars" class="btn btn-dark">View Cars </a>


<p></p>

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Bookings</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">
            Finance
        </a>
    </li>
</ul>

<p></p>


<div class="tab-content" id="myTabContent">

    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <table class="table table-striped col-md-12" id="tbl">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Item1.FirstOrDefault().TestingCarName)</th>
                    <th>@Html.DisplayNameFor(model => model.Item1.FirstOrDefault().CustName)</th>
                    <th>@Html.DisplayNameFor(model => model.Item1.FirstOrDefault().Revdate)</th>
                    <th>@Html.DisplayNameFor(model => model.Item1.FirstOrDefault().hasCome)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Item1)
                {
                    <tr>
                        <td>   @Html.DisplayFor(modelItem => item.TestingCarName)</td>
                        <td>   @Html.DisplayFor(modelItem => item.CustName)</td>
                        <td>   @Html.DisplayFor(modelItem => item.Revdate)</td>
                        <td>   @Html.DisplayFor(modelItem => item.hasCome)</td>


                        <td>
                            <div class="dropdown">
                                <button class="btn btn-secondary btn-sm  dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
                                    Action
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                    <a asp-action="Edit" asp-route-id="@item.CustomerId" class="dropdown-item">Edit</a>

                                    <a asp-action="Delete" asp-route-id="@item.CustomerId" class="dropdown-item">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <table class="table table-striped col-md-12" id="tbl2">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Item2.FirstOrDefault().StockId)</th>
                    <th>@Html.DisplayNameFor(model => model.Item2.FirstOrDefault().PaymentType)</th>
                    <th>@Html.DisplayNameFor(model => model.Item2.FirstOrDefault().CarModel)</th>
                    <th>@Html.DisplayNameFor(model => model.Item2.FirstOrDefault().Approve)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Item2)
                {
                    <tr>
                        <td>   @Html.DisplayFor(modelItem => item.StockId)</td>
                        <td>   @Html.DisplayFor(modelItem => item.PaymentType)</td>
                        <td>   @Html.DisplayFor(modelItem => item.CarModel)</td>
                        <td>   @Html.DisplayFor(modelItem => item.Approve)</td>



                        <td>
                            <div class="dropdown">
                                <button class="btn btn-secondary btn-sm  dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
                                    Action
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                    <a asp-action="StockEdit" asp-route-id="@item.StockId" class="dropdown-item">Edit</a>

                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>




@section scripts
{
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tbl, #tbl2').DataTable({
                order:
                    [
                        ['1', 'desc']
                    ]
            });
        });
    </script>
}