@model IEnumerable<MovieApiV.Model.Car>
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<h2 class="p-2">Cars Available</h2>
<table class="table table-striped" id="tbl">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManufactureCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mileage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAcquired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReqistationYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CarCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManufactureCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CatCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mileage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAcquired)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReqistationYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>

                    <div class="dropdown">
                        <button class="btn btn-secondary btn-sm  dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                            <a asp-action="edit" asp-controller="cars" asp-route-code="@item.CarCode" class="dropdown-item">Edit</a>
                            <a asp-action="details" asp-controller="cars" asp-route-code="@item.CarCode" class="dropdown-item">Detail</a>
                            <a asp-action="delete" asp-controller="cars" asp-route-code="@item.CarCode" class="dropdown-item">Delete</a>
                        </div>
                    </div>
                    @*@Html.ActionLink("Edit", "Edit", "Cars", new { code = item.CarCode }) |
                    @Html.ActionLink("Details", "Details", "Cars", new { code = item.CarCode }) |
                    @Html.ActionLink("Delete", "Delete", "Cars", new { code = item.CarCode })*@
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" asp-controller="admin">Admin Panel</a>

@section scripts
{
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tbl').DataTable({
                order:
                    [
                        ['1', 'desc']
                    ]
            });
        });
    </script>
}
