@model MovieApiV.Model.Part

@{
    ViewData["Title"] = "Details";

    string imgSrc = "";
    if (Model.ImagePicture != null)
    {
        var base64 = Convert.ToBase64String(Model.ImagePicture);
        imgSrc = String.Format("data:image;base64,{0}", base64);
    }
}

<h1>Details</h1>

<div>
    <div class="col-6">
        <img src="@imgSrc" height="300" width="400"  />
    </div>
</div>
<div>
    <h4>Part</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PartCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PartCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PartName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PartName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacture)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manufacture)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
    </dl>
</div>
<div>
    <input type="button" class="btn btn-outline-info" value="Add to Cart" onclick="AddToCart('@Model.PartCode', true)" />
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>


