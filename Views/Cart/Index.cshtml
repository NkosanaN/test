@model IEnumerable<MovieApiV.Model.Cart>

@{
    ViewData["Title"] = "Shopping Cart";
}
<h2 class="alert alert-success text-center" role="alert">Cart Summary</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                Item  Code
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSDvsC9tYFzZRotE5cfTi2-YQZNEn1u6TYRVQ3Spf_Tc4u77OvklJTxEMVEqb7YovPTYD4&usqp=CAU" width="150px" height="150px" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <div class="row">
                       
                            <input type="button" value="Delete" class="btn btn-danger"  onclick="Delete('@item.ItemCode')" />
                            <p></p>
                            <div class="dropdown ml-1">
                                <button class="btn btn-secondary btn-sm  dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
                                    Payment Options
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                    <a asp-action="Payment" asp-route-code="@item.ItemCode" asp-route-type="Cash" class="dropdown-item">Cash</a>
                                    <a asp-action="Payment" asp-route-code="@item.ItemCode" asp-route-type="Loan" class="dropdown-item">Loan</a>
                                </div>
                            </div>
                        
                    </div>
                   
                   

                </td>
            </tr>
        }
    </tbody>
</table>


<script>

    function Delete(id) {
        $.ajax({
            url: '/cart/delete',
            method: 'POST',
            data: { 'code': id },
            success: function (x) {
                window.location.reload();
            }
        });
    };
</script>